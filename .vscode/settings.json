{
    // Prevent conhost pile
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.windowsEnableConpty": false,
    
    // Set Environement path
    "terminal.integrated.env.windows": {
        "PATH": "${workspaceFolder}\\node_modules\\.bin;${workspaceFolder}\\src\\pxdoc\\_bin\\windows;${env:PATH};${workspaceFolder}"
    },
    "terminal.integrated.env.osx": {
        "PATH": "${workspaceFolder}/node_modules/.bin:${workspaceFolder}/src/pxdoc/_bin/mac:${env:PATH}:${workspaceFolder}"
    },
    
    // File Watcher
    "filewatcher.commands": [

        // Render _*.php template
        {
            "match": "[\\\\/]_[^\\\\/]+\\.php$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:process"],
            "event": "onFileChange"
        },

        // Compress JS file
        {
            "match": "^(?!.*[/\\\\]pxdoc[/\\\\])(?!.*\\.min\\.js$).*\\.js$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:jsmin"],
            "event": "onFileChange"
        },

        // Bundle PXDoc JS
        {
            "match": "[\\\\/]pxdoc[\\\\/]jscripts[\\\\/].*(?<!\\.min)\\.js$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:jsbundle"],
            "event": "onFileChange"
        },

        // Compile Master SASS
        {
            "match": "[\\\\/](?!_)[^\\\\/]+\\.scss$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:sass:master"],
            "event": "onFileChange"
        },

        // Compile Slave SASS
        {
            "match": "[\\\\/]_[^\\\\/]+\\.scss$",
            "isAsync": false,
            "vscodeTask": ["workbench.action.tasks.runTask", "pxdoc:sass:slave"],
            "event": "onFileChange"
        }

    ],

    // Live Server configuration
    "liveServer.settings.port": 5504,
    "liveServer.settings.root": "./src/",
    "liveServer.settings.ignoreFiles": [
        ".vscode/**",
        ".github/**",
        "**/_**",
        "**/.git/**",
        "**/.vendor/**",
        "**/node_modules/**",
        "**/*.scss",
        "**/*.sass",
        "**/*.php",
        "**/*.ts",
        "**/!(*.min).js"
    ]

}